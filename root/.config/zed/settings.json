{
  // AGENT --------------------------------------------------
  "session": {
    "trust_all_worktrees": true,
  },
  "buffer_font_weight": 450.0,
  "agent": {
    "expand_terminal_card": false,
    "expand_edit_card": false,
    "notify_when_agent_waiting": "never",
    "enable_feedback": false,
    "always_allow_tool_actions": false,
    "enabled": false,
  },
  "agent_servers": {
    "your_agent": {
      "type": "custom",
      "command": "path_to_executable",
      "args": [],
      "env": {},
    },
  },

  // EDITOR --------------------------------------------------
  "icon_theme": "Material Icon Theme",
  "ui_font_weight": 600,
  "inlay_hints": {
    "enabled": false,
  },
  "always_treat_brackets_as_autoclosed": false,
  "indent_guides": {
    "coloring": "indent_aware",
    "background_coloring": "indent_aware",
    "active_line_width": 1,
    "line_width": 1,
    "enabled": true,
  },
  "scrollbar": {
    "axes": {
      "horizontal": false,
      "vertical": true,
    },
  },
  "hover_popover_delay": 600,
  "hover_popover_enabled": true,
  "search_wrap": true,
  "excerpt_context_lines": 20,
  "collaboration_panel": {
    "dock": "right",
  },
  "outline_panel": {
    "dock": "right",
  },
  "git_panel": {
    "dock": "right",
  },
  "inline_code_actions": false,
  "show_wrap_guides": false,
  "cursor_shape": "bar",
  "base_keymap": "VSCode",
  "soft_wrap": "editor_width",
  "file_scan_exclusions": ["**/.git", ".DS_Store"],
  "search": {
    "regex": false,
  },
  "expand_excerpt_lines": 20,
  "tab_size": 2,
  "file_finder": {
    "skip_focus_for_active_in_search": true,
    "include_ignored": "smart",
    "modal_max_width": "small",
    "file_icons": true,
  },
  "preferred_line_length": 130,
  "extend_comment_on_newline": false,
  "fast_scroll_sensitivity": 1.0,
  "toolbar": {
    "agent_review": false,
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "code_actions": false,
  },
  "title_bar": {
    "show_branch_icon": false,
    "show_onboarding_banner": false,
    "show_project_items": true,
    "show_sign_in": false,
    "show_user_picture": false,
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false,
  },
  "gutter": {
    "runnables": false,
    "line_numbers": true,
    "breakpoints": true,
    "min_line_number_digits": 0,
    "folds": false,
  },
  "restore_on_startup": "launchpad",
  "show_completion_documentation": true,
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_close_button": "hidden",
    "show_diagnostics": "all",
  },
  "auto_update": true,
  "vim_mode": false,
  "on_last_window_closed": "quit_app",
  "hide_mouse": "on_typing",
  "ensure_final_newline_on_save": true,
  "close_on_file_delete": true,
  "use_autoclose": true,
  "jsx_tag_auto_close": { "enabled": true },
  "show_edit_predictions": false,
  "format_on_save": "on",
  "auto_indent": true,
  "use_auto_surround": true,
  "auto_install_extensions": {
    "angular": true,
    "html": true,
    "hyprlang": true,
    "git-firefly": true,
    "material-icon-theme": true,
    "tombi": true,
    "make": true,
    "dart": true,
    "emmet": true,
    "log": true,
    "rainbow-csv": true,
    "ini": true,
    "comment": true,
    "basher": true,
    "cyberpunk-scarlet": true,
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono",
  },
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_line_height": "comfortable",
  "remove_trailing_whitespace_on_save": true,
  "minimap": {
    "show": "always",
    "max_width_columns": 60,
    "thumb": "always",
    "thumb_border": "none",
    "current_line_highlight": "line",
    "display_in": "all_editors",
  },
  "telemetry": {
    "metrics": true,
    "diagnostics": true,
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "drag_and_drop": true,
    "indent_guides": {
      "show": "always",
    },
    "indent_size": 20,
  },
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#410003",
  },
  "ui_font_size": 16.0,
  "buffer_font_size": 16.0,
  "theme": {
    "mode": "system",
    "light": "Cyberpunk Scarlet Protocol",
    "dark": "Cyberpunk Scarlet Protocol",
  },
  "auto_indent_on_paste": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 300,
    },
  },
  "use_system_path_prompts": false,
  "restore_on_file_reopen": false,

  // LSP ---------------------------------------------------------------
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
      },
      "enable_lsp_tasks": true,
    },
    "dart": {
      "settings": {
        "lineLength": 130,
      },
      "binary": {},
    },
    "rust-analyzer": {
      "binary": { "path": "/home/tieppo/.cargo/bin/rust-analyzer" },
      "initialization_options": {
        "checkOnSave": true,

        "check": {
          "command": "clippy",
          "workspace": true,
        },

        "cargo": {
          "allTargets": true,
          "features": "all",
        },

        "procMacro": {
          "enable": true,
        },

        "diagnostics": {
          "experimental": {
            "enable": false,
          },
        },
      },
    },
  },

  // LANGUAGES ---------------------------------------------------------------
  "languages": {
    "TypeScript": {
      "auto_indent_on_paste": true,
      "ensure_final_newline_on_save": true,
      "use_on_type_format": true,
      // "formatter": {
      //   "external": {
      //     "command": "prettier",
      //     "arguments": ["--stdin-filepath", "{buffer_path}"]
      //   }
      // }
    },
    "HTML": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "Dart": {
      "enable_language_server": true,
      "tasks": {
        "prefer_lsp": true,
      },
      "formatter": "language_server",
      "format_on_save": "on",
      "ensure_final_newline_on_save": true,
      "auto_indent": true,
    },
  },

  "file_types": {
    "json": [".prettierrc"],
    "css": ["*.rasi"],
  },
}
